# ===========================================
# VITAL Platform Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control

# ===========================================
# Frontend (Next.js) - Public Variables
# ===========================================
# These are exposed to the browser (prefix with NEXT_PUBLIC_)

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# Frontend (Next.js) - Server-Only Variables
# ===========================================
# These are NOT exposed to the browser

SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Backend (FastAPI) - Database
# ===========================================

DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# ===========================================
# Backend (FastAPI) - AI Providers
# ===========================================

OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# LangChain/LangSmith (optional but recommended)
LANGSMITH_API_KEY=lsv2_...
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=vital-dev

# ===========================================
# Backend (FastAPI) - Application Settings
# ===========================================

ENVIRONMENT=development
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Optional - Monitoring & Observability
# ===========================================

# Sentry (error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===========================================
# Optional - Feature Flags
# ===========================================

ENABLE_RAG=true
ENABLE_LANGGRAPH=true
ENABLE_STREAMING=true

# ===========================================
# Production Overrides (Vercel)
# ===========================================
# Set these in Vercel Environment Variables dashboard:
# - NEXT_PUBLIC_APP_URL=https://app.vital.com
# - NEXT_PUBLIC_API_URL=https://api.vital.com
# - All SUPABASE_* variables
# - All AI provider keys

# ===========================================
# Production Overrides (Railway)
# ===========================================
# Set these in Railway Environment Variables:
# - DATABASE_URL (auto-provided if using Railway Postgres)
# - All SUPABASE_* variables
# - All AI provider keys
# - ENVIRONMENT=production
# - LOG_LEVEL=info
# - CORS_ORIGINS=https://app.vital.com
