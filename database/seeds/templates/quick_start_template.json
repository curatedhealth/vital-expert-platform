  "field_help": {
    "unique_id": {
      "description": "Unique identifier for this role",
      "format": "ROLE-{FUNCTION_CODE}-{DEPT_CODE}-{NUMBER}",
      "examples": ["ROLE-MA-MSL-001", "ROLE-RD-CRA-001", "ROLE-RA-DIR-001"]
    },
    "seniority_level": {
      "options": ["Executive", "Senior", "Mid", "Junior", "Entry"],
      "definitions": {
        "Executive": "C-suite, VP, SVP (10+ years experience)",
        "Senior": "Director, Senior Manager (7-10 years)",
        "Mid": "Manager, Lead (3-7 years)",
        "Junior": "Specialist, Associate (1-3 years)",
        "Entry": "Coordinator, Assistant (0-1 years)"
      }
    },
    "function_area": {
      "common_values": [
        "Medical Affairs",
        "Clinical Development",
        "Regulatory Affairs",
        "Pharmacovigilance",
        "Market Access",
        "HEOR",
        "Quality Assurance",
        "Quality Control",
        "Manufacturing",
        "Research & Development"
      ]
    },
    "gxp_types": {
      "options": {
        "GCP": "Good Clinical Practice (clinical trials)",
        "GLP": "Good Laboratory Practice (preclinical testing)",
        "GMP": "Good Manufacturing Practice (drug manufacturing)",
        "GVP": "Good Pharmacovigilance Practice (drug safety)",
        "GDP": "Good Distribution Practice (supply chain)"
      }
    },
    "travel_requirement_pct": {
      "description": "Percentage of time spent traveling",
      "ranges": {
        "0-10": "Minimal/occasional",
        "10-25": "Low",
        "25-50": "Moderate",
        "50-75": "High",
        "75-100": "Extensive"
      }
    }
  },

  "workflow": {
    "step_1": "Start by filling out 3-5 roles you know well",
    "step_2": "For each role, spend ~15 minutes completing all fields",
    "step_3": "Review with someone currently in that role for validation",
    "step_4": "Once you have 5+ roles, share the completed file",
    "step_5": "Optionally expand to full template for more detailed roles"
  }
}
