# =============================================================================
# VITAL Platform - Docker Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Ports
# -----------------------------------------------------------------------------
API_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432
FLOWER_PORT=5555

# -----------------------------------------------------------------------------
# Database (Supabase - Recommended)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# -----------------------------------------------------------------------------
# Database (Local PostgreSQL - Alternative)
# Enable with: docker-compose --profile local-db up
# -----------------------------------------------------------------------------
POSTGRES_USER=vital
POSTGRES_PASSWORD=vital_dev_password
POSTGRES_DB=vital_dev

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# LLM API Keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# -----------------------------------------------------------------------------
# Vector Database (Pinecone)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars
PLATFORM_ORGANIZATION_ID=your-platform-org-uuid

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
EXECUTION_CONCURRENCY=4
INGESTION_CONCURRENCY=2
DISCOVERY_CONCURRENCY=2

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
SENTRY_DSN=https://your-sentry-dsn

# -----------------------------------------------------------------------------
# Flower (Celery Monitoring)
# -----------------------------------------------------------------------------
FLOWER_USER=admin
FLOWER_PASSWORD=change-me-in-production
