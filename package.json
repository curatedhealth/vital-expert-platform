{
  "name": "vital-path",
  "version": "1.0.0",
  "description": "VITAL Path - Digital Health Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @vital/vital-system dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "compliance:langchain": "node scripts/check-langchain-imports.js",
    "db:migrate": "cd apps/vital-system && pnpm migrate",
    "db:status": "cd apps/vital-system && pnpm migrate:status",
    "pre-commit": "pnpm lint && pnpm type-check && pnpm compliance:langchain",
    "pre-deploy": "pnpm build && pnpm test && pnpm compliance:langchain"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "dotenv": "^17.2.3",
    "prettier": "^3.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "glob": ">=11.1.0",
      "js-yaml": ">=4.1.1",
      "prismjs": ">=1.30.0",
      "tar": ">=7.5.2",
      "validator": ">=13.15.20"
    }
  },
  "dependencies": {
    "critters": "^0.0.25",
    "next": "^16.0.3",
    "pg": "^8.16.3",
    "react": "19",
    "react-dom": "19"
  }
}
