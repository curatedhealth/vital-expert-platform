{
  "$ref": "#/definitions/expert_sync_response",
  "definitions": {
    "expert_sync_response": {
      "type": "object",
      "properties": {
        "conversationId": {
          "type": "string",
          "format": "uuid"
        },
        "message": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid"
            },
            "role": {
              "type": "string",
              "enum": [
                "user",
                "assistant",
                "system",
                "tool"
              ]
            },
            "content": {
              "type": "string"
            },
            "citations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "document",
                      "web",
                      "database",
                      "expert"
                    ]
                  },
                  "title": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "snippet": {
                    "type": "string"
                  },
                  "relevanceScore": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "metadata": {
                    "type": "object",
                    "additionalProperties": {}
                  }
                },
                "required": [
                  "id",
                  "type",
                  "title",
                  "snippet"
                ],
                "additionalProperties": false
              }
            },
            "toolCalls": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "arguments": {
                    "type": "object",
                    "additionalProperties": {}
                  },
                  "result": {},
                  "error": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "pending",
                      "running",
                      "completed",
                      "failed"
                    ]
                  }
                },
                "required": [
                  "id",
                  "name",
                  "arguments",
                  "status"
                ],
                "additionalProperties": false
              }
            },
            "thinking": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "step": {
                    "type": "integer"
                  },
                  "thought": {
                    "type": "string"
                  },
                  "action": {
                    "type": "string"
                  }
                },
                "required": [
                  "step",
                  "thought"
                ],
                "additionalProperties": false
              }
            },
            "tokenUsage": {
              "type": "object",
              "properties": {
                "promptTokens": {
                  "type": "integer"
                },
                "completionTokens": {
                  "type": "integer"
                },
                "totalTokens": {
                  "type": "integer"
                }
              },
              "required": [
                "promptTokens",
                "completionTokens",
                "totalTokens"
              ],
              "additionalProperties": false
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "description": "ISO 8601 datetime"
            },
            "metadata": {
              "type": "object",
              "additionalProperties": {}
            }
          },
          "required": [
            "id",
            "role",
            "content",
            "createdAt"
          ],
          "additionalProperties": false
        },
        "totalTokenUsage": {
          "type": "object",
          "properties": {
            "promptTokens": {
              "type": "integer"
            },
            "completionTokens": {
              "type": "integer"
            },
            "totalTokens": {
              "type": "integer"
            },
            "estimatedCostUsd": {
              "type": "number"
            }
          },
          "required": [
            "promptTokens",
            "completionTokens",
            "totalTokens",
            "estimatedCostUsd"
          ],
          "additionalProperties": false
        },
        "processingTimeMs": {
          "type": "integer"
        },
        "model": {
          "type": "string"
        }
      },
      "required": [
        "conversationId",
        "message",
        "totalTokenUsage",
        "processingTimeMs",
        "model"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}