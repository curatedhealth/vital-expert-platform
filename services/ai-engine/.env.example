# =============================================================================
# VITAL AI Engine - Environment Variables Template
# =============================================================================
# SECURITY: Copy this file to .env and fill in your actual credentials.
# NEVER commit .env to version control!
#
# Required for: Mode 1-4 Ask Expert, RAG, GraphRAG agent selection
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE (Required)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# -----------------------------------------------------------------------------
# NEO4J (Required for GraphRAG agent selection)
# -----------------------------------------------------------------------------
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# -----------------------------------------------------------------------------
# PINECONE (Required for semantic search / RAG)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX=vital-knowledge

# -----------------------------------------------------------------------------
# LLM PROVIDERS (Required for AI responses)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# -----------------------------------------------------------------------------
# OPTIONAL: Observability
# -----------------------------------------------------------------------------
LANGFUSE_PUBLIC_KEY=pk-lf-your-langfuse-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_RAG=true
ENABLE_GRAPHRAG=true
ENABLE_HITL=true
ENABLE_STREAMING=true
