  SELECT
    t.id,
    t.name,
    ARRAY(
      SELECT prerequisite_task_id
      FROM task_prerequisites tp
      WHERE tp.task_id = t.id
    ) as prerequisite_ids
  FROM workflow_tasks wt
  JOIN tasks t ON wt.task_id = t.id
  WHERE wt.workflow_id = p_workflow_id
  ORDER BY wt.task_order;
$$;

