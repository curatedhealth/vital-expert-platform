CREATE OR REPLACE FUNCTION soft_delete(
  p_table_name TEXT,
  p_id UUID
)
RETURNS BOOLEAN
LANGUAGE plpgsql SECURITY DEFINER
AS $$
BEGIN
  EXECUTE format('
    UPDATE %I
    SET deleted_at = NOW()
    WHERE id = $1
    AND deleted_at IS NULL
