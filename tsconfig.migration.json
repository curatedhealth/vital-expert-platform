{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist/scripts"
  },
  "include": [
    "scripts/**/*",
    "src/lib/database/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020"
    }
  }
}